version: '3.8'

services:
  supervaizer:
    build: .
    ports:
      - "8000:8000"
    environment:
      - SUPERVAIZER_HOST=0.0.0.0
      - SUPERVAIZER_PORT=8000
      - SUPERVAIZER_ENVIRONMENT=dev
      - SUPERVAIZER_LOG_LEVEL=INFO
    volumes:
      - .:/app
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/.well-known/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s